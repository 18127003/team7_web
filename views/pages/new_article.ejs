<body>
    <head>
        <%- include("../templates/navmenu.ejs",{user:user}) %> 
    </head>
    <main>
        <div class="row center"><kbd class="flow-text">BÀI BÁO MỚI</kbd></div>
        <div class="row">
            <div class="col s2"></div>
            <form class="col s8" enctype="multipart/form-data" action="/users/write" method="POST">
                <div class="row center">
                    <div class="col s5">
                        <div class="row input-field">
                            <input id="post-title" type="text" class="validate" name="title">
                            <label class="active" for="post-title">Tiêu đề</label>
                        </div>
                        <div class="row input-field">
                            <input id="post-subtitle" type="text" class="validate" name="sub_title">
                            <label class="active" for="post-subtitle">Phụ đề</label>
                        </div>
                        <div class="row input-field">
                            <textarea id="textarea1" class="materialize-textarea" name="content"></textarea>
                            <label for="textarea1">Nội dung 1</label>
                        </div>
                    </div>
                    <div class="col s1"></div>
                    <div class="col s6 input-field">
                        <div class=" row center file-field upload-field">
                            <div class="btn pink lighten-4">
                                <img src="https://img.icons8.com/officel/40/000000/add-image.png" />
                                <input type="file" name="image">
                            </div>
                            <div class="file-path-wrapper">
                                <input class="file-path validate" type="text" placeholder="Thêm hình">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row center">
                    <a class="btn btn-floating btn-large waves-effect waves-teal pink lighten-3 tooltipped" id="adder" data-position="bottom" data-tooltip="Thêm nội dung">
                        <i class="material-icons">add</i>
                    </a>
                </div>
                
                <div class="row">
                    <div class="chips chips-placeholder" id="articletag">
                    </div>
                </div>
                <input class="auth" style="display:none;" name="author_id" value="<%- user._id %>">
                <input class="auth_name" style="display:none;" name="author_name" value="<%- user.name %>">
                <button class="btn waves-effect waves-light pink lighten-4" type="submit" id="articlesubmit">ĐĂNG
                    <i class="material-icons right">send</i>
                </button>
            </form>
        </div>
    </main>
    <footer class="page-footer">
        <%- include("../templates/footer.ejs",{user:user}) %> 
    </footer>
    <link rel="stylesheet" href="/stylesheet/new_article.css">
    <script src="/script/new_article.js"></script>
    <%- include("../templates/dependency.ejs") %> 
</body>