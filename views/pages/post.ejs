<body>
    <link rel="stylesheet" href="/stylesheet/post.css">
    <%- include("../templates/dependency.ejs")%>
    <%- include("../templates/navmenu.ejs",{user:user})%>
    <main>
        <div class="row center">
            <kbd class="flow-text" style="font-size: x-large;color: black;">Bài viết mới</kbd>
        </div>
        <div class="row">
            <div class="col s1 m1 l3"></div>
            <form class="col m10 s10 l6" enctype="multipart/form-data" action="/users/create" method="POST">
                <div class="row">
                    <div class="col s12 input-field">
                        <input value="Hello World" id="post-title" type="text" class="validate" name="title">
                        <label class="active" for="post-title">Tiêu đề</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12 input-field">
                        <textarea id="textarea1" class="materialize-textarea" name="description"></textarea>
                        <label for="textarea1">Bạn nghĩ gì?</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <div class="file-field input-field upload-field">
                            <div class="btn pink lighten-4">
                                <img src="https://img.icons8.com/officel/40/000000/add-image.png" />
                                <input type="file" name="image" multiple>
                            </div>
                            <div class="file-path-wrapper">
                                <input class="file-path validate" type="text" placeholder="Thêm những khoảnh khắc của bạn">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <div class="chips chips-placeholder" id="posttag">
                        </div>
                    </div>
                </div>
                <input class="auth" style="display:none;" name="author_id" value="<%- user.id %>">
                <input class="auth_name" style="display:none;" name="author_name" value="<%- user.name %>">
            
                <div class="row center">
                    <button class="btn waves-effect waves-light pink lighten-4" type="submit" id="postsubmit">ĐĂNG
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </form>
        </div>
    </main>
    <footer class="page-footer" style="padding-top: 0px;">
        <%- include("../templates/footer.ejs",{user:user})%>
    </footer>
    

    <script src="/script/post.js"></script>
    
</body>