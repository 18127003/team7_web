<body>
    <%- include("../templates/navmenu.ejs",{user:user})%>
    <main>
        <div class="row">
            <div class="col s3"></div>
            <form class="col s6" enctype="multipart/form-data" action="/users/create" method="POST">
                <div class="row">
                    <div class="col s12 input-field">
                        <input value="Hello World" id="post-title" type="text" class="validate" name="title">
                        <label class="active" for="post-title">Title</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12 input-field">
                        <textarea id="textarea1" class="materialize-textarea" name="description"></textarea>
                        <label for="textarea1">Write your idea</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <div class="file-field input-field upload-field">
                            <div class="btn pink lighten-4">
                                <img src="https://img.icons8.com/officel/40/000000/add-image.png" />
                                <input type="file" name="image" multiple>
                            </div>
                            <div class="file-path-wrapper">
                                <input class="file-path validate" type="text" placeholder="Upload one or more pictures">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <div class="chips chips-placeholder" id="posttag">
                        </div>
                    </div>
                </div>
                <input class="auth" style="display:none;" name="author" value="<%- user.id %>">
                <button class="btn waves-effect waves-light pink lighten-4" type="submit" id="postsubmit">Post
                    <i class="material-icons right">send</i>
                </button>
            </form>
        </div>
    </main>
    <footer class="page-footer" style="padding-top: 0px;">
        <%- include("../templates/footer.ejs",{user:user})%>
    </footer>
