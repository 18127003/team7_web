
<body>
    <header>
        <%- include("../templates/navmenu.ejs",{user:user}) %> 
    </header>
    <main>
        <div class="row title">
            <kbd class="flow-text truncate" style="font-size: x-large;">Mùa xuân trên bản</kbd>
            <hr style="width: 20%;">
        </div>
        <div class="row center">
            <div class="col s2">
                <a class="waves-effect waves-light btn btn-floating btn-large transparent btn-flat" 
                    style="top: 40%;position: absolute; left: 20%;" >
                    <i class="material-icons" id="hint">
                        <img src="/views/image/icon/tamgiacmach.png" style="margin-top: 5px;"/>
                    </i>   
                </a>

                <div class="tap-target" data-target="hint" style="background: url(/views/image/bg/spring/sapa.png);background-repeat:no-repeat;background-size:cover;">
                </div>
                <div class="tap-target" data-target="hint" style="background: url(/views/image/bg/spring/nhatrang.png);background-repeat:no-repeat;background-size:cover;">
                </div>  
            </div>
            <div class="col s8">
                <div class="card whitesmoke hoverable" style="border-radius: 7px;">
                    <div class="row card-content center">
                        <img src="/views/image/bg/spring_1.jpg" style="width: 100%;height: auto;"/>
                    </div>
                </div>
            </div>
        </div>
        <% articles.forEach(article => { 
            imgs=JSON.parse(article.images)
            cnt = JSON.parse(article.content) %>
        <div class="section pink lighten-5">
            <div class="row" style="margin-bottom: 0px;">
                <div class="col s4">
                    <div class="card-image">
                        <img src="<%= imgs[0]%>" style="height: 400px;width: auto;"/>
                    </div>
                </div>
                <div class="col s8">
                    <div class="row">
                        <kbd class="flow-text" style="font-size:xx-large"><%= article.title %></kbd>
                    </div>
                    <p class="flow-text" style="font-size: x-large;"><%= article.sub_title %></p>
                    <p class="flow-text" style="font-size: medium;"><%- cnt[0] %></p>
                </div>
            </div>
        </div>
        <div class="parallax-container">
            <div class="parallax"><img src="<%= imgs[1] %>"/></div>
        </div>
        <% }); %>
    </main>
    <footer class="page-footer" style="padding: 0px;">
        <%- include("../templates/footer.ejs",{user:user}) %>
    </footer>
    
    
    
    <link rel="stylesheet" href="/stylesheet/map_srping.css"/>
    <script src="/script/map.js"></script>
    <%- include("../templates/dependency.ejs") %> 

</body>

