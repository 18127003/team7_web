<body>
    <div class="header" style="visibility: visible;opacity: 1;">
        <a class="logo" href="/" style="visibility: visible;opacity: 1;">
            <img src="https://img.icons8.com/doodle/48/000000/lighthouse--v1.png"/>
        </a>
    </div>
    <main id="main-holder">
        <div class="row">
            <div class="col s3"></div>
            <div class="col s6">
                <div class="row center">
                    <kbd id="login-header" class="flow-text truncate"><span>&hearts;</span>&nbsp;Welcome to our
                        house&nbsp;<span>&hearts;</span></kbd>
                </div>
                <div class="row error center">
                    <% if(errors!=null){
                        errors.forEach(err => { %>
                        <kbd style="background-color: coral;font-size: medium;"><%= err.msg %></kbd><br>
                    <% });} %>
                </div>
                <div class="row form">
                    <form action="/users/register" method="POST">
                        <div class="row form-group">
                            <input type="text" id="name" name="name" class="form-control" placeholder="Enter Name"
                                value="<%= typeof name != 'undefined' ? name : '' %>" />
                        </div>
                        <div class="row form-group">
                            <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
                                value="<%= typeof email != 'undefined' ? email : '' %>" />
                        </div>
                        <div class="row form-group">
                            <input type="password" id="password" name="password" class="form-control"
                                placeholder="Create Password"
                                value="<%= typeof password != 'undefined' ? password : '' %>" />
                        </div>
                        <div class="row form-group">
                            <input type="password" id="password2" name="password2" class="form-control"
                                placeholder="Confirm Password"
                                value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
                        </div>
                        <div class="row center">
                            <button type="submit" class="btn send-button center pulse">
                                <kbd class="truncate flow-text" style="font-size: medium;">Hey Homies</kbd> 
                            </button>
                        </div>  
                        <div class="row center">
                        <a class="login_text flow-text truncate" href="login" style="font-size: medium;">
                            Have an account?&nbsp;Sign&nbsp;in&nbsp;here
                        </a>
                    </div>
                </div>
            </div>

            <!-- <div class="col-md-12 ">
                        <div class="login-or">
                            <hr class="hr-or">
                            <span class="span-or">or</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <a class="btn btn-block g-button" href="#">
                            <i class="fa fa-google"></i> Sign up with Google
                        </a>
                    </div>
                    <p class="small mt-3">By signing up, you are indicating that you have read and agree to the
                        <a href="#" class="ps-hero__content__link">Terms of Use</a> and <a href="#"
                            class="ps-hero__content__link">Privacy Policy</a>.
                    </p> -->
            </form>
        </div>
    </main>
    <link rel="stylesheet" href="/stylesheet/signup-page.css">
    <%- include("../templates/dependency.ejs") %>
</body>