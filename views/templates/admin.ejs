<div id="admin_modal" class="modal modal-fixed-footer pink lighten-5" style="overflow-y: hidden;border-radius: 15px;">
    
    <form method="POST">
        <div class="modal-content white" style="overflow-x: hidden;">
            <div class="row center">
                <kbd>Chọn người dùng để nâng cấp thành admin</kbd>
            </div>
            <div class="row center user_container"><%  users.forEach(user => { %><kbd class="flow-text chip" style="font-size: medium; padding-right: 10px;">
                    <label>
                        <input id="indeterminate-checkbox" type="checkbox" />
                        <span><%= user.name %></span>
                        <span style="display: none;"><%= user._id %></span>
                    </label>
                </kbd><%    }); %></div>
            
            <div class="row center">
            
            </div>
            
        </div>
        <div class="modal-footer pink lighten-5">
            <div class="row center" style="margin: 0px;">
                <button class="modal-close waves-effect waves-pink btn" type="button" id="assign_admin">Xác nhận</button>
            </div>
        </div>
    </form>
</div>
