<div id="modal1" class="modal modal-fixed-footer pink lighten-5 hide-on-med-and-down" style="overflow-y: hidden;">
    <div class="modal-content">
        <div class="row">
            <div class="col s5">
                <div class="card hoverable">
                    <div class="card-image">
                        <% if(user.avatar!=null){%>
                        <img src="<%= user.avatar %>">
                        <% } else{ %>
                        <img src="/views/image/bg/1.jpg">
                        <% } %> 
                        <span class="card-title"><strong><%= user.name %></strong></span>
                        <a class="btn-floating halfway-fab waves-effect waves-light red change-avatar" href="/users/info?id=<%= user._id %>">
                            <i class="material-icons">add</i>
                        </a>
                    </div>
                    <div class="card-content" style="color: black;">
                        <p><%- user.email%></p>
                    </div>
                </div>
            </div>
            <div class="col s7">
                <% if(user.role=="ADMIN"){ %> 
                <div class="row card">
                    <a href="/home/new_article" class="btn pink lighten-4">New Article</a>
                </div>
                <% } %> 
                <div class="row card">
                    <a href="/home/post" class="btn pink lighten-4">New Post</a>
                </div>
                <div class=" row card">
                    <a href="#" class="btn pink lighten-4">My Favorite</a>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <a class="modal-close waves-effect waves-pink btn pink lighten-4" href="/users/logout" style="margin-bottom: 30px;">Log out</a>
    </div>
</div>