<div id="modal1" class="modal modal-fixed-footer pink lighten-5 hide-on-med-and-down" style="overflow-y: hidden;border-radius: 7px;">
    <div class="modal-content">
        <div class="row">
            <div class="col l6">
                <div class="card hoverable">
                    <div class="card-image">
                        <% if(user.avatar!=null){%>
                        <img src="<%= user.avatar %>">
                        <% } else{ %>
                        <img src="/views/image/icon/o3.jpg">
                        <% } %> 
                        <span class="card-title flow-text"><strong><%= user.name %></strong></span>
                        <a class="btn-floating halfway-fab waves-effect waves-light red change-avatar hoverable pulse" href="/users/info?id=<%= user._id %>">
                            <i class="material-icons">account_circle</i>
                        </a>
                    </div>
                    <div class="card-content" style="color: black;">
                        <kbd class="flow-text truncate" style="font-size: medium;"><%- user.email%></kbd>
                    </div>
                </div>
            </div>
            <div class="col l6 fastbtn">
                <% if(user.role=="ADMIN"){ %> 
                <div class="row">
                    <a href="/home/new_article" class="btn pink lighten-4">Soạn báo mới</a>
                </div>
                <% } %> 
                <div class="row">
                    <a href="/home/post" class="btn pink lighten-4">Đăng bài viết</a>
                </div>
                <div class=" row">
                    <a href="/users/info?id=<%= user._id %>#favorite" class="btn pink lighten-4">Yêu thích</a>
                </div>
                <div class=" row">
                    <a href="/test" class="btn pink lighten-4">Test</a>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer logout">
        <a class="modal-close waves-effect waves-pink btn pink lighten-4" href="/users/logout" style="margin-bottom: 30px;">Đăng xuất</a>
    </div>
</div>